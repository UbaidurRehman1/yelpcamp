<%- include ../partials/header%>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome in our YelpCamp Page!</h1>
            <p>Here, we upload hand-made pics from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campGround/new">Submit a Campground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <%campGround.forEach(function(camp){%>

        <div class="col-md-4 col-sm-6 col-12" style="margin-bottom: 20px">
            <div class="thumbnail text-center">
                <img  class="img img-thumbnail" src= <%=camp["image"]%>>
                <a class="btn btn-info btn-block" style="width: 80%; margin: 5px auto;" href="/campGround/<%=camp._id%>">Info</a>
                <div class="caption">
                    <h3><%=camp.name%></h3>
                </div>

            </div>
        </div>


        <%})%>

    </div>

    <a href="/">Back to main page</a>

    <%- include ../partials/footer%>
</div>
