<%- include ../partials/header%>


<div class="container" xmlns="http://www.w3.org/1999/html">

    <div id="center">
        <h1>Edit comment for <%=campGround.name%></h1>
    </div>

    <div class="row">
        <div id="top_div">
            <form action="/campGround/<%=campGround._id%>/comments/<%=comment._id%>?_method=PUT" method="post">

                <div class="form-group">
                    <textarea class="form-control" name="content_text" rows="3"><%=comment.content_text%></textarea>
                </div>

                <div class="form-group">
                    <button class="form-control btn btn-primary">Update</button>
                </div>

            </form>

            <div>
                <a href="/campGround">Go Back</a>
            </div>
        </div>
    </div>
</div>


<div style="margin-top: 20px; margin-bottom: 20px">
</div>


<%- include ../partials/footer%>